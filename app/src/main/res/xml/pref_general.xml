<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <EditTextPreference
        android:title="@string/zip_code"
        android:key="@string/zip_code_key"
        android:defaultValue="@string/zip_code_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_values"
        android:title="@string/temperature"
        android:key="@string/temperature_key"
        />


</PreferenceScreen>